<h1>All Posts</h1>

<% @posts.each do |p| %>
  <h3><%=link_to p.title, post_path(p) %></h3>
  <p>Posted by <%= link_to p.user.first_name, user_path(p.user) %> on <%= p.date.to_formatted_s :long_ordinal %></p>
<% end %>

<%= link_to "All Users", users_path %> <br>
<%= link_to "Create New Post", new_post_path %>

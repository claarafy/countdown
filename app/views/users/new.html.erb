<div class="container">
  <div class="new-account">
    <h1>Create a New Account</h1>
  </div>

  <div class="container login-form">
    <%= form_for @user do |f| %>
      <div class = "form-group choose-file">
        <%= f.file_field :profile_pic %>
      </div>
      <div class = "form-group col-md-12">
        <%= f.text_field :first_name, placeholder: "First Name", class: "col-md-3" %>
        <%= f.text_field :last_name, placeholder: "Last Name", class: "col-md-3" %>
      </div>

      <div class = "form-group col-md-12">
        <%= f.text_field :email, placeholder: "Email address", class: "col-md-6"%>
      </div>

      <div class = "form-group col-md-12">
        <%= f.text_field :password, placeholder: "Password", class: "col-md-6" %>
      </div>

      <div class = "form-group col-md-12">
        <%= f.date_field :birthday, placeholder: "Birthday", class: "col-md-6" %>
      </div>
      <div class = "form-group col-md-12">
        <%= f.text_field :current_location, placeholder: "Current Location", class: "col-md-6" %>
      </div>
      <div class = "form-group">
        <%= f.submit 'Create an Account', class: 'btn btn-primary'%>
      </div>
    <% end %>
  </div>

</div>

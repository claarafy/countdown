<h1>Edit Group: <%= @group.name %></h1>

<%= form_for @group do |f| %>
  Name your group <br>
  <%= f.text_field :name, placeholder: "Group Name" %> <br>
  Group description <br>
  <%= f.text_area :description, placeholder: "Group Description"%><br>
  <%= f.submit 'Update Group' %>
<% end %>

<%= link_to 'Delete Group', group_path(@group), method: :delete %>
